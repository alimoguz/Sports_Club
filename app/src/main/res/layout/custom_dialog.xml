<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="oguuz.alim.sports_club.Add_Student"
    android:background="@color/common_google_signin_btn_text_dark_disabled">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">

        <TextView
            android:id="@+id/thisDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20/4/2018"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/change_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@color/cardview_light_background"
            android:src="@drawable/ic_arrow_drop_down_black_24dp" />
    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/photo"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/com_facebook_button_login_silver_background"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/com_facebook_button_login_silver_background"
                android:hint="First Name"
                android:inputType="textCapCharacters"
                android:padding="5dp"
                android:paddingLeft="5dp"
                android:textColorHint="@color/com_facebook_button_background_color_disabled" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:text="  "/>

            <EditText
                android:id="@+id/surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/com_facebook_button_login_silver_background"
                android:hint="Last Name"
                android:inputType="textCapCharacters"
                android:padding="5dp"

                android:paddingLeft="5dp"
                android:textColorHint="@color/com_facebook_button_background_color_disabled" />
        </LinearLayout>  //firs-last name


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/com_facebook_button_login_silver_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birthday:"
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/com_facebook_button_background_color_disabled"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:padding="5dp"
                android:text="5/4/1995"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/change_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:padding="5dp"
                android:src="@drawable/ic_arrow_drop_down_black_24dp" />
        </LinearLayout>  ///birthday

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/com_facebook_button_login_silver_background"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/mother_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/com_facebook_button_login_silver_background"
                android:hint="Mother Name"
                android:inputType="textCapCharacters"
                android:padding="5dp"
                android:paddingLeft="5dp"
                android:textColorHint="@color/com_facebook_button_background_color_disabled" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/common_google_signin_btn_text_dark_disabled"
                android:text="  "/>

            <EditText
                android:id="@+id/father_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/com_facebook_button_login_silver_background"
                android:hint="Father Name"
                android:inputType="textCapCharacters"
                android:padding="5dp"

                android:paddingLeft="5dp"
                android:textColorHint="@color/com_facebook_button_background_color_disabled" />
        </LinearLayout>  //mother-father name

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/com_facebook_button_login_silver_background"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/com_facebook_button_login_silver_background"
                android:hint="Phone Number"
                android:inputType="number"
                android:padding="5dp"
                android:paddingLeft="5dp"
                android:textColorHint="@color/com_facebook_button_background_color_disabled" />


        </LinearLayout>  //phone number

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:background="@drawable/com_facebook_button_login_silver_background"
            android:layout_marginTop="10dp">

            <EditText
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/com_facebook_button_login_silver_background"
                android:hint="Address"
                android:inputType="textCapCharacters"
                android:padding="5dp"
                android:paddingLeft="5dp"
                android:textColorHint="@color/com_facebook_button_background_color_disabled" />


        </LinearLayout>  //address

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >

            <Button
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/button_shape"
                android:text="SAVE"
                android:textColor="@color/buttonTextColor"
                android:textSize="20sp" />
        </LinearLayout> /// button
    </LinearLayout>

















</RelativeLayout>