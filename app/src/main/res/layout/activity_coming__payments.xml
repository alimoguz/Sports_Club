<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="oguuz.alim.sports_club.Coming_Payments"
    >

    <TextView
        android:id="@+id/no_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO PAYMENT FOUND"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/errorColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/coming_payments_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"></android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/coming_payments_send_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEND PAYMENT MESSAGE"
            android:background="@drawable/button_shape"
            android:textSize="20sp"
            android:textColor="@color/buttonTextColor"
            android:layout_margin="10dp"/>


    </LinearLayout>



</RelativeLayout>
